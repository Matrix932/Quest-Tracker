@inject Microsoft.AspNetCore.Identity.SignInManager<DemoProject.Models.ApplicationUser > signInManager

@if(signInManager.IsSignedIn(User))
{
    <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Heloo @User.Identity.Name</li>
            <li class="text-white nav-link">
                <a style="text-decoration:none; color:red;" href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>

        </ul>
    </form>
}
else
{
  <ul style="list-style-type: none;" class="list-group list-group-horizontal">
  <li>
   <a class="nav-link list-group-horizontal text-white" id="registerLink" asp-action="Register" asp-controller="Account">Register</a> </li>

  <li>
  <a  class="nav-link list-group-horizontal text-white" id="registerLink" asp-action="Login" asp-controller="Account">Sign In</a>
  </li>
</ul>
}